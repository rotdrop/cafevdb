        <type>integer</type>
        <default>0</default>
        <notnull>true</notnull>
        <autoincrement>1</autoincrement>
        <unsigned>true</unsigned>
        <length>4</length>
      </field>

      <field>
        <name>author</name>
        <type>text</type>
        <notnull>true</notnull>
        <length>64</length>
      </field>

      <field>
        <name>created</name>
        <type>integer</type>
        <notnull>true</notnull>
        <length>11</length>
      </field>

      <field>
        <name>editor</name>
        <type>text</type>
        <notnull>false</notnull>
        <length>64</length>
      </field>

      <field>
        <name>modified</name>
        <type>integer</type>
        <notnull>false</notnull>
        <length>11</length>
      </field>

      <field>
        <name>message</name>
        <type>clob</type>
        <notnull>false</notnull>
      </field>

      <field>
        <name>inreplyto</name>
        <type>integer</type>
        <default>-1</default>
        <notnull>true</notnull>
        <length>4</length>
      </field>

      <field>
        <name>deleted</name>
        <type>integer</type>
        <notnull>false</notnull>
        <length>11</length>
      </field>

      <field>
        <name>priority</name>
        <type>integer</type>
        <default>0</default>
        <unsigned>true</unsigned>
        <length>1</length>
      </field>

      <field>
        <name>popup</name>
        <type>boolean</type>
        <default>false</default>
      </field>

      <field>
        <name>reader</name>
        <type>text</type>
        <notnull>false</notnull>
        <length>1024</length>
      </field>

    </declaration>

  </table>
</database>
